{
  "manifest_version": 3,
  "name": "Cribl Cloud Helper",
  "version": "1.1",
  "description": "Helper utilities for Cribl Cloud",
  "icons": {
    "16": "images/cribl-16.png",
    "32": "images/cribl-32.png",
    "48": "images/cribl-48.png",
    "128": "images/cribl-128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "https://*.cribl.cloud/*"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start",
      "matches": [
        "https://*.cribl.cloud/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}